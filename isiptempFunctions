
#include "header.h"
char name[];
char unit[];
int price;
int quantity;
int select(int userInput){
	if (userInput >= 0 && userInput <= 9){
		if (userInput == 0){
			//Exit program
			exit();
		}else if (userInput == 1){
			struct node head = (struct node *)malloc(sizeof(struct node));
			head->next = NULL;
			//Create an empty list
		}else if (userInput == 2){
			//Insert a product

			// Scans new Info for newNode
			printf("Insert Product Name");
			scanf("%s", &name);
			printf("Insert Product Unit");
			scanf("%s", &unit);
			printf("Insert Product Price");
			scanf("%d", &price);
			printf("Insert Product Quantity");
			scanf("%d", &quantity);
			// Creates new node
			struct node *newNode = (struct node *)malloc(sizeof(struct node));
			// Inserts variables of newNode
			newNode->productName = name;
			newNode->productUnit = unit;
			newNode->productPrice = price;
			newNode->productQuantity = quantity;

			struct node *temp;
			temp = head;
			// Walks to end of list
			while (temp != NULL){
				temp->next = temp;
			}
			// Inserts newNode into list
			temp->next = newNode;
		}else if (userInput == 3){
			//Delete a products
			printf("Enter Products Name to Delete");
			scanf(% s, &name);
			struct node *temp;
			struct node *prev;
			temp = head;
			int count = 0;
			while (temp->productName != name){
				temp->next = temp;
				count++;
			}
			for (int i = 0; i < count - 1; i++){
				prev->next = prev;
			}
			if (temp->next == NULL){
				prev->next = NULL;
			}
			else{
				prev->next = temp->next
			}
		}else if (userInput == 4){
			//Delete the entire list
			struct node *temp;
			while (head != NULL){
				temp = head;
				head = head->next;
				free(temp);
			}
		}else if (userInput == 5){
			//Search a product
		}else if (userInput == 6){
			//Display products in the list
		}else if (userInput == 7){
			//Purchase a product
		}else if (userInput == 8){
			//Sell a product
		}else if (userInput == 9){
			//Save to file
		}else
		{
			printf("The input needs to be a number 0-9\n");
		}
	}
	return 0;
}
